<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="C:\Python34\python.exe"
                  arguments="c:\home\site\wwwroot\app.py"
                  startupTimeLimit="60"
                  requestTimeout="60"
                  stdoutLogEnabled="true"
                  stdoutLogFile="\\?\%home%\LogFiles\httpPlatform\stdout">
    </httpPlatform>
  </system.webServer>
</configuration>
