<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="C:\Python34\python.exe"
                  arguments="c:\home\site\wwwroot\app.py --port 5000"
                  startupTimeLimit="60"
                  processesPerApplication="16">
    </httpPlatform>
  </system.webServer>
</configuration>